package tarea_String;

import java.util.Scanner;

public class prob5 {

	public static void main(String[] args) {
		Scanner entrada = new Scanner(System.in);
		int cant,cantVocales;
		String palabra;
		System.out.println("escriba una palabra: ");
		palabra = entrada.nextLine();
		cantVocales=contarTodasVocales(palabra);
		System.out.println("la cantidad de vocales sin repetir es:");
		System.out.println(cantVocales);
	}
	
	public static int contarTodasVocales(String txt) {
		int pos,p1,p2,p3,p4,p5;
		int cantV=0;
		pos = txt.indexOf("a",0);
		
		pos = txt.indexOf("e",0);
	
		pos = txt.indexOf("i",0);
		pos = txt.indexOf("o",0);
		pos = txt.indexOf("u",0);
		
		cantV = pos;
		return cantV;
	}
}
