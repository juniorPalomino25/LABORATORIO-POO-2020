package tarea_String;

import java.util.Scanner;

public class prob4 {

	public static void main(String args[]) {
		Scanner entrada= new Scanner(System.in);
		int cant,cantVocales;
		String palabra="";
		System.out.println("escriba una palabra: ");
		cant=palabra.length();
		cantVocales=contarTodasVocales(palabra,cant);
		System.out.println(cantVocales);
	}
	public static int contarTodasVocales(String txt, int c) {
		int p=0;
		char caracter[] = null;
		for(int i=0;i<=c;i++) {
			caracter[i] = txt.charAt(i);
			if ( (caracter[i] == 'a') || (caracter[i] == 'e') || (caracter[i] =='i') || (caracter[i] == 'o') || (caracter[i] =='u')) {
				p++;
			}
		}
		return p;
	}
}
